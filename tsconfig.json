{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "incremental": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "outDir": "./dist"
  },
  "include": ["./src/**/*"]
}
