{
  "APP_PORT": 8000,
  "APP_HOST": "127.0.0.1",
  "FFMPEG_PATH": "ffmpeg",
  "FFMPEG_PRESETS": {
    "540p": {
      "scale": 540,
      "fps": 30,
      "preset": "superfast",
      "crf": 27,
      "vBitrate": 1024,
      "aBitrate": 128
    }
  },
  "SERVICES": [
    {
      "service": "KOLPAQUE_RTMP",
      "stats": "https://stats-api.klpq.io",
      "rtmp": "rtmps://mediaserver.klpq.io:1936/live/*",
      "channels": [
        {
          "name": "*",
          "tasks": [
            {
              "task": "mpd"
            },
            {
              "task": "hls"
            },
            {
              "task": "encode",
              "preset": "540p",
              "hosts": ["rtmps://mediaserver.klpq.io:1936/encode/*"]
            }
          ]
        },
        {
          "name": "kino",
          "tasks": [
            {
              "task": "write",
              "paths": ["./vod"]
            },
            {
              "task": "transfer",
              "hosts": ["rtmps://mediaserver.klpq.io:1936/transfer/kino"]
            },
            {
              "task": "encode",
              "preset": "540p",
              "hosts": ["rtmps://mediaserver.klpq.io:1936/encode/kino"]
            }
          ]
        }
      ]
    }
  ]
}
